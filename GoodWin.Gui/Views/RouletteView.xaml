<UserControl x:Class="GoodWin.Gui.Views.RouletteView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:GoodWin.Gui.ViewModels"
             xmlns:conv="clr-namespace:GoodWin.Gui.Converters"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             Height="450" Width="450">
    <UserControl.DataContext>
        <vm:RouletteViewModel />
    </UserControl.DataContext>
    <UserControl.Resources>
        <conv:ColorHexToColorConverter x:Key="HexToColor" />
    </UserControl.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="Количество сегментов:" Margin="0,0,5,0" />
                <TextBox Text="{Binding SegmentCount, Mode=TwoWay}" Width="50" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="Прозрачность колеса (%):" Margin="0,0,5,0" />
                <Slider Minimum="0" Maximum="100" Value="{Binding WheelOpacity, Mode=TwoWay}" Width="150" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5" VerticalAlignment="Center">
                <TextBlock Text="Длительность вращения (мс):" Margin="0,0,5,0" VerticalAlignment="Center" />
                <Slider Minimum="0" Maximum="10000" Value="{Binding SpinDuration, Mode=TwoWay}" Width="150" />
                <TextBox Text="{Binding SpinDuration, Mode=TwoWay}" Width="60" Margin="5,0,0,0" />
            </StackPanel>
            <ItemsControl ItemsSource="{Binding Segments}" Margin="0,5,0,0">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <xctk:ColorPicker SelectedColor="{Binding ColorHex, Mode=TwoWay, Converter={StaticResource HexToColor}}"
                                           Width="120" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <Button Content="Сохранить" Command="{Binding SaveCommand}" Width="100" Margin="0,10,0,0" />
        </StackPanel>

        <Button Grid.Row="1"
                Content="Настроить рулетку"
                Click="OpenRouletteWindow"
                HorizontalAlignment="Center"
                Margin="0,10,0,0" />
    </Grid>
</UserControl>
