<Window x:Class="GoodWin.Gui.Views.DebuffNotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="{DynamicResource SegmentBackground}"
        Foreground="{DynamicResource TextBrush}"
        Opacity="0.8"
        Width="300" Height="120"
        Topmost="True"
        ShowInTaskbar="False">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Name="TitleText" FontSize="18" FontWeight="Bold" TextAlignment="Center" />
            <TextBlock x:Name="DescriptionText" Margin="0,5,0,0" TextAlignment="Center" TextWrapping="Wrap" />
        </StackPanel>
    </Grid>
</Window>
