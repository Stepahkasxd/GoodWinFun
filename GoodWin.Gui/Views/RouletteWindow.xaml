<Window x:Class="GoodWin.Gui.Views.RouletteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ctrl="clr-namespace:GoodWin.Gui.Controls"
        xmlns:conv="clr-namespace:GoodWin.Gui.Converters"
        AllowsTransparency="True"
        WindowStyle="None"
        Topmost="True"
        Background="Transparent"
        ShowInTaskbar="False"
        ResizeMode="CanResize"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        WindowStartupLocation="Manual"
        Width="300" Height="300">
    <Window.Resources>
        <conv:PercentageToOpacityConverter x:Key="PctToOpacity" />
    </Window.Resources>
    <Window.ContextMenu>
        <ContextMenu>
            <MenuItem Header="Сохранить позицию рулетки"
                      Click="SavePosition_Click" />
            <MenuItem Header="Закрыть редактор"
                      Click="CloseEditor_Click" />
        </ContextMenu>
    </Window.ContextMenu>
    <Grid>
        <ctrl:RouletteWheelControl x:Name="WheelControl"
                                   Segments="{Binding Segments}"
                                   WheelOpacity="{Binding WheelOpacity, Converter={StaticResource PctToOpacity}}" />
        <Polygon Points="0,0 20,0 10,20"
                 Fill="White"
                 Stroke="Black"
                 StrokeThickness="1"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Top" />
    </Grid>
</Window>
